@model IEnumerable<LightBootstrapTemplate.Models.Diary>

    
        <table id="tblEntries" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th>
                        Entry Date
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Thoughts)
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.EntryDate.ToString("dd-MMM-yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            <a href="@Url.Action("DetailsDairy",new { id=item.Id})" class="btn btn-sm btn-fill btn-info">Read Thoughts</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    