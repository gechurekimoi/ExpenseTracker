@model IEnumerable<LightBootstrapTemplate.Models.Income>

<style>
    .btn {
        margin: 2px;
    }
</style>

<table class="table table-hover table-striped">
    <tr>

        <th>
            Date
        </th>
        <th>
           Amount
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.DateReceived.ToString("dd-MMMM-yyy")
            </td>
            <td>
               Ksh. @item.Amount.ToString("N2")
            </td>
          
            <td>
                @Html.ActionLink("Details", "DetailsIncome", new { id = item.Id }, new { @class = "btn btn-xs btn-primary btn-fill" })
            </td>
        </tr>
    }

</table>